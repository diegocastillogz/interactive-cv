{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "checkJs": true,
    "noEmit": true,
    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "api/*": ["api/*"],
      "assets/*": ["assets/*"],
      "components/*": ["components/*"],
      "styles/*": ["styles/*"],
      "utils/*": ["utils/*"],
      "hooks/*": ["hooks/*"],
      "contexts/*": ["contexts/*"],
      "constant/*": ["constant/*"]
    }
  },
  "exclude": ["node_modules", "build"]
}
